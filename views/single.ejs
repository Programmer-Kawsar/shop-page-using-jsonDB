<div class="container mt-5">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <div class="card shadow">
        <div class="card-header">
          <a href="/" class="btn btn-primary">Back</a>
          <h1 class="text-center">Single Product</h1>
        </div>
        <div class="card-body">
          <div class="text-center">
            <img
              style="height: 250px"
              class="w-50 singleproductImage"
              src="/productsImages/<%= product.photo %>"
              alt=""
            />
          </div>
          <div class="mt-4">
            <h6><strong>Name : </strong> <%= product.name %></h6>
            <h6>
              <strong>Regular Price :</strong> $ <%= product.regularPrice %>
            </h6>
            <h6><strong>Sale Price :</strong> $ <%= product.salePrice %></h6>
            <h6><strong>Stock :</strong> <%= product.stock %></h6>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>
