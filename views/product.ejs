<div class="container mb-5 mt-5">
  <div class="row">
    <div class="col-lg-3">
      <a href="/create" class="btn btn-primary">Add New Product</a>
    </div>
    <div class="col-lg-6 text-center"><h1>Shop Page</h1></div>
    <div class="col-lg-3"></div>
  </div>
</div>

<div class="container mb-5">
  <div class="row">
    <% products.forEach((item, index) => { %>
    <div class="col-lg-3 mt-3 shadow pb-3">
      <img class="w-100 h-50" src="productsImages/<%= item.photo %>" alt="" />

      <div>
        <h6 class="mt-2 fntsize mxwidth">
          <strong><%= item.name %></strong>
        </h6>
      </div>
      <h6 class="fntsize">
        <strong>Regular Price: </strong> $ <%= item.regularPrice %>
      </h6>
      <div class="d-flex justify-content-between">
        <h6 class="fntsize">
          <strong>Sale Price:</strong> $ <%= item.salePrice %>
        </h6>
        <h6 class="fntsize me-3"><strong>Stock:</strong> <%= item.stock %></h6>
      </div>

      <div class="text-center">
        <a href="/single/<%= item.slug %>">
          <button class="bg-info btn py-1 px-2 text-white rounded-circle">
            <i class="fa fa-eye"></i></button
        ></a>

        <a href="/edit/<%= item.id %>">
          <button
            class="mx-2 bg-success btn py-1 px-2 text-white rounded-circle"
          >
            <i class="fa fa-edit"></i></button
        ></a>

        <a href="/product-delete/<%= item.id %>"
          ><button class="bg-danger btn py-1 px-2 text-white rounded-circle">
            <i class="fa fa-trash"></i></button
        ></a>
      </div>

      <div class="mt-3 pb-2 text-center">
        <a href="#"><button class="btn btn-primary">Buy Now</button></a>
      </div>
    </div>
    <% }) %>
  </div>
</div>
